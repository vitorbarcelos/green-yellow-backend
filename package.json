{
  "private": true,
  "type": "module",
  "license": "MIT",
  "version": "0.0.1",
  "name": "greenyellow",
  "author": "Vitor Barcelos",
  "exports": "./src/main.ts",
  "description": "Backend of GreenYellow",
  "repository": "https://github.com/vitorbarcelos/greenyellow-backend",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "start:prod": "node dist/main",
    "format": "yarn prettier --write src/",
    "alias:watch": "yarn tsc-alias --watch",
    "start:watch": "yarn nest start --watch",
    "build": "yarn nest build && yarn tsc-alias",
    "start:dev": "yarn build && yarn npm-run-all -p start:watch alias:watch",
    "test": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest",
    "test:watch": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --watch",
    "test:cov": "NODE_OPTIONS=\"$NODE_OPTIONS --experimental-vm-modules\" jest --coverage"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.11",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.11",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/platform-express": "^10.4.11",
    "@nestjs/swagger": "^8.0.7",
    "@nestjs/typeorm": "^10.0.2",
    "axios": "^1.7.8",
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "csv-parser": "^3.0.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "exceljs": "^4.4.0",
    "jose": "^5.9.6",
    "morgan": "^1.10.0",
    "nanoid": "^5.0.9",
    "nestjs-form-data": "^1.9.92",
    "node-jose": "^2.2.0",
    "pg": "^8.13.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.8",
    "@nestjs/schematics": "^10.2.3",
    "@nestjs/testing": "^10.4.11",
    "@types/bcryptjs": "^2.4.6",
    "@types/bluebird": "^3.5.42",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.0",
    "@types/node-jose": "^1.1.13",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.4.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.10",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2"
  }
